%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_tag(url: friend_invitations_path, method: :post, class: "invite") do |f|
        %header
          %h1 Invite a friend to join OpenFlix!
        %fieldset
          .row
            = f.text_field :friend_name, label: "Friends' Name",  wrapper: { class: 'col-sm-4' }
          .row
            = f.text_field :email, label: "Friend's Email Address", wrapper: { class: 'col-sm-4' }
          .row
            = f.text_area :invitation_text, label: "Invitation Message", rows: 6, value: "Please join this really cool site!", wrapper: { class: 'col-sm-6'}
          = f.submit "Send Invitation"

