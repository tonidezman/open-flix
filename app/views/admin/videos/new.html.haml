%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
      = bootstrap_form_for([:admin, @video], layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-6") do |f|
        %ul.nav.nav-tabs
          %li
            %a(href="/ui/admin_views_payments") Recent Payments
          %li.active
            %a(href="") Add a New Video
        %br
        %fieldset
          = f.text_field :title, label: 'Title'
          = f.select :category, @category_options, prompt: 'Select category'
          = f.text_area :description, label: 'Description', rows: 8
          = f.file_field :large_cover, label: 'Large Cover', class: 'btn btn-file'
          = f.file_field :small_cover, label: 'Small Cover', class: 'btn btn-file'
        %fieldset.actions.form-group
          .col-sm-6.col-md-offset-3
            = f.submit "Add video"

